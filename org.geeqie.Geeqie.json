{
    "app-id": "org.geeqie.Geeqie",
    "runtime": "org.gnome.Platform",
    "runtime-version": "43",
    "sdk": "org.gnome.Sdk",
    "command": "geeqie",
    "rename-desktop-file": "geeqie.desktop",
    "rename-icon": "geeqie",
    "finish-args": [
        "--share=ipc",
        "--socket=x11",
        "--socket=wayland",
        "--filesystem=host"
    ],
    "cleanup": [
        "/include",
        "/lib/pkgconfig",
        "*.a",
        "*.la"
    ],
    "modules": [
        {
            "name": "exiv2",
            "buildsystem": "cmake-ninja",
            "config-opts": [
                "-DCMAKE_BUILD_TYPE=RelWithDebInfo"
            ],
            "cleanup": [
                "/bin",
                "/share/man"
            ],
            "sources": [
                {
                    "type": "archive",
                    "url": "https://github.com/Exiv2/exiv2/releases/download/v0.27.5/exiv2-0.27.5-Source.tar.gz",
                    "sha256": "35a58618ab236a901ca4928b0ad8b31007ebdc0386d904409d825024e45ea6e2"
                }
            ]
        },
        {
            "name": "lcms2",
            "config-opts": [
                "--disable-static"
            ],
            "cleanup": [
                "/bin",
                "/share"
            ],
            "sources": [
                {
                    "type": "archive",
                    "url": "https://download.sourceforge.net/lcms/lcms2-2.8.tar.gz",
                    "sha256": "66d02b229d2ea9474e62c2b6cd6720fde946155cd1d0d2bffdab829790a0fb22"
                }
            ]
        },
        "shared-modules/clutter/clutter.json",
        "shared-modules/libsoup/libsoup-2.4.json",
        {
            "name": "libchamplain",
            "sources": [
                {
                    "type": "archive",
                    "url": "https://download.gnome.org/sources/libchamplain/0.12/libchamplain-0.12.16.tar.xz",
                    "sha256": "4a7e31cf7889669aebf04631543af64435edd989685159b804911c6005db908d"
                }
            ]
        },
        {
            "name": "libwmf",
            "config-opts": [
                "--with-freetype=/usr"
            ],
            "cleanup": [
                "/include",
                "/share/doc",
                "/bin"
            ],
            "sources": [
                {
                    "type": "git",
                    "url": "https://github.com/caolanm/libwmf.git",
                    "tag": "v0.2.12",
                    "commit": "5b7af9cf44c688770f174533dbe14c8953ec39cd"
                },
                {
                    "type": "patch",
                    "path": "libwmf-autoheader.patch"
                },
                {
                    "type": "shell",
                    "commands": [
                        "autoreconf -vfi"
                    ]
                }
            ]
        },
        "shared-modules/intltool/intltool-0.51.json",
        {
            "name": "geeqie",
            "config-opts": [
                "--disable-lirc",
                "--disable-lua",
                "--disable-gpu-accel",
                "--disable-ffmpegthumbnailer",
                "--enable-gtk3"
            ],
            "cleanup": [
                "/share/man"
            ],
            "post-install": [
                "install -Dm644 src/icons/svg/gqview_icon.svg /app/share/icons/hicolor/scalable/apps/geeqie.svg",
                "rm -r /app/share/pixmaps"
            ],
            "sources": [
                {
                    "type": "archive",
                    "url": "https://github.com/BestImageViewer/geeqie/releases/download/v2.0.1/geeqie-2.0.1.tar.xz",
                    "sha256": "89c1a7574cfe3888972d10723f4cf3a277249bea494fd9c630aa8d0df944555d",
                    "x-checker-data": {
                        "type": "json",
                        "url": "https://api.github.com/repos/BestImageViewer/geeqie/releases/latest",
                        "version-query": ".tag_name | sub(\"^v\"; \"\")",
                        "url-query": ".assets[] | select(.name==\"geeqie-\" + $version + \".tar.xz\") | .browser_download_url"
                    }
                },
                {
                    "type": "patch",
                    "path": "geeqie-no-changelog.patch"
                },
                {
                    "type": "shell",
                    "commands": [
                        "autoreconf -vfi"
                    ]
                }
            ]
        }
    ]
}
