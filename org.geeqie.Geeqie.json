{
    "app-id": "org.geeqie.Geeqie",
    "runtime": "org.gnome.Platform",
    "runtime-version": "45",
    "sdk": "org.gnome.Sdk",
    "command": "geeqie",
    "rename-desktop-file": "geeqie.desktop",
    "rename-icon": "geeqie",
    "finish-args": [
        "--share=ipc",
        "--socket=x11",
        "--socket=wayland",
        "--filesystem=host"
    ],
    "cleanup": [
        "/include",
        "/lib/pkgconfig",
        "*.a",
        "*.la"
    ],
    "modules": [
        {
            "name": "exiv2",
            "buildsystem": "cmake-ninja",
            "config-opts": [
                "-DCMAKE_BUILD_TYPE=RelWithDebInfo"
            ],
            "cleanup": [
                "/bin",
                "/share/man"
            ],
            "sources": [
                {
                    "type": "archive",
                    "url": "https://github.com/Exiv2/exiv2/releases/download/v0.27.5/exiv2-0.27.5-Source.tar.gz",
                    "sha256": "35a58618ab236a901ca4928b0ad8b31007ebdc0386d904409d825024e45ea6e2"
                }
            ]
        },
        {
            "name": "lcms2",
            "config-opts": [
                "--disable-static"
            ],
            "cleanup": [
                "/bin",
                "/share"
            ],
            "sources": [
                {
                    "type": "archive",
                    "url": "https://download.sourceforge.net/lcms/lcms2-2.8.tar.gz",
                    "sha256": "66d02b229d2ea9474e62c2b6cd6720fde946155cd1d0d2bffdab829790a0fb22"
                }
            ]
        },
        "shared-modules/intltool/intltool-0.51.json",
        {
            "name": "xxd",
            "buildsystem": "simple",
            "build-commands": [
                "make -C src/xxd",
                "install -Dm755 -t \"${FLATPAK_DEST}/bin\" src/xxd/xxd"
            ],
            "sources": [
                {
                    "type": "archive",
                    "url": "https://github.com/vim/vim/archive/v9.0.0135/vim-v9.0.0135.tar.gz",
                    "sha256": "b47690d77a8262d3115bea608fbf27f6ed122b49fc7765fb2cbf7d122d250d8f"
                }
            ]
        },
        {
            "name": "geeqie",
            "buildsystem": "meson",
            "sources": [
                {
                    "type": "archive",
                    "url": "https://github.com/BestImageViewer/geeqie/releases/download/v2.1/geeqie-2.1.tar.xz",
                    "sha256": "d0511b7840169d37e457880d1ab2a787c52b609a0ab8fa1a8a391e841fdd2dde",
                    "x-checker-data": {
                        "type": "json",
                        "url": "https://api.github.com/repos/BestImageViewer/geeqie/releases/latest",
                        "version-query": ".tag_name | sub(\"^v\"; \"\")",
                        "versions": {
                            ">": "2.0.1"
                        },
                        "url-query": ".assets[] | select(.name==\"geeqie-\" + $version + \".tar.xz\") | .browser_download_url"
                    }
                }
            ]
        }
    ]
}
